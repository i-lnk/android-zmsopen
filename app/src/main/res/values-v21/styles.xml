<resources>

    <style name="btn_bottom" parent="btn_com">
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_height">45dp</item>

    </style>

    <style name="tab_home">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:background">@drawable/bg_common_white_selector</item>
    </style>


    <!-- SeekBar 视频播放进度条 -->
    <style name="Widget.SeekBar.Normal" parent="@android:style/Widget.SeekBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@drawable/seekbar_horizontal</item>
        <item name="android:progressDrawable">@drawable/seekbar_horizontal</item>
        <item name="android:thumb">@drawable/seekbar_thumb</item>
        <item name="android:thumbOffset">7.5dip</item>
        <item name="android:maxHeight">6.0dip</item>
        <item name="android:minHeight">6.0dip</item>
        <item name="android:splitTrack">false</item>
    </style>

</resources>
