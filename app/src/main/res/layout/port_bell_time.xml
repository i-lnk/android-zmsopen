<?xml version="1.0" encoding="utf-8"?><!-- 竖屏时视频时间栏 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingTop="8dip">

    <ImageView
        android:id="@+id/ic_status_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/a5_ic_bell_status_record"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_time_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dip"
        android:layout_marginRight="3dip"
        android:text="00:00:00" />

    <TextView
        android:id="@+id/tv_time_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dip"
        android:layout_marginRight="3dip"
        android:text="00:00:00"
        android:textColor="@color/text_video_green"
        android:visibility="gone" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/a5_ic_bell_status_record"
        android:visibility="invisible" />
</LinearLayout>
