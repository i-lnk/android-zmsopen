<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="7dip">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <!-- 计算长度 -->
        <LinearLayout
            android:id="@+id/ly_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/iv_check_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dip"
                android:src="@drawable/ic_check_selector"
                android:visibility="gone" />

            <TextView
                style="@style/text_common"
                android:layout_width="wrap_content"
                android:layout_height="45dip"
                android:layout_marginLeft="3dip"
                android:ems="5"
                android:gravity="center_vertical|right"
                android:lines="1"
                android:text="09:00:00"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/ly_temp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dip"
                android:src="@drawable/ic_check_selector"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_date"
                style="@style/text_common"
                android:layout_width="wrap_content"
                android:layout_height="45dip"
                android:layout_marginLeft="8dip"
                android:gravity="center_vertical|right"
                android:text="2010-01-01"
                android:textColor="@color/text_hint"
                android:textSize="16sp" />
        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip">

        <ImageView
            android:id="@+id/iv_expand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_expand_selector"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/divider_top"
                android:layout_width="1.5dip"
                android:layout_height="40dip"
                android:background="@color/divider" />

            <ImageView
                android:id="@+id/iv_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_point" />

            <FrameLayout
                android:id="@+id/divider_bottom"
                android:layout_width="1.5dip"
                android:layout_height="40dip"
                android:background="@color/divider" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ly_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="75dip"
            android:layout_height="75dip" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="15dip"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_dev_name"
                style="@style/text_common"
                android:lines="1"
                android:text="@string/app_name"
                android:textSize="@dimen/text_16" />
            <!--            <TextView
                            android:id="@+id/tv_photo_name"
                            style="@style/text_common"
                            android:lines="1"
                            android:textSize="@dimen/text_14"
                            android:textColor="@color/text_hint"
                            android:text="desc"/>-->
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
