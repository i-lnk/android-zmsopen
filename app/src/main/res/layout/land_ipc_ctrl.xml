<?xml version="1.0" encoding="utf-8"?><!-- 横屏时视频控制栏 -->
<com.rl.geye.ui.widget.CtrlLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ly_video_ctrl_land"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:moveDistance="60dp"
    app:move_direction="up">

    <!--    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.3"
            android:background="#000000"
            android:paddingBottom="8dip"
            android:paddingTop="8dip"/>-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:background="#76000000"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_name"
            style="@style/text_common"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:paddingBottom="8dip"
            android:paddingLeft="20dip"
            android:paddingRight="2dip"
            android:paddingTop="8dip"
            android:text="@string/app_name"
            android:textColor="@color/white" />

        <View style="@style/call_talk_ctrl_divider" />

        <RelativeLayout
            android:id="@+id/ly_stream"
            style="@style/call_talk_ctrl"
            android:minWidth="70dp">

            <TextView
                android:id="@+id/tv_stream"
                style="@style/text_common"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="6dip"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="8dip"
                android:layout_marginTop="6dip"
                android:background="@drawable/btn_black_tran_selector"
                android:gravity="center"
                android:lines="1"
                android:paddingBottom="4dip"
                android:paddingLeft="7dip"
                android:paddingRight="7dip"
                android:paddingTop="4dip"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_14" />
        </RelativeLayout>


        <View style="@style/call_talk_ctrl_divider" />


        <RelativeLayout
            android:id="@+id/ly_resolution"
            style="@style/call_talk_ctrl"
            android:minWidth="70dp">

            <TextView
                android:id="@+id/tv_resolution"
                style="@style/text_common"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="6dip"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="8dip"
                android:layout_marginTop="6dip"
                android:background="@drawable/btn_black_tran_selector"
                android:gravity="center"
                android:lines="1"
                android:paddingBottom="4dip"
                android:paddingLeft="7dip"
                android:paddingRight="7dip"
                android:paddingTop="4dip"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_14" />
        </RelativeLayout>


        <View style="@style/call_talk_ctrl_divider" />

        <ImageView
            android:id="@+id/iv_mic"
            style="@style/call_talk_ctrl"
            android:src="@drawable/ic_call_mic_selector" />

        <View style="@style/call_talk_ctrl_divider" />

        <ImageView
            android:id="@+id/iv_speaker"
            style="@style/call_talk_ctrl"
            android:src="@drawable/ic_call_speaker_selector" />

        <View style="@style/call_talk_ctrl_divider" />


        <ImageView
            android:id="@+id/iv_mirror"
            style="@style/call_talk_ctrl"
            android:src="@mipmap/ic_monitor_mirror" />

        <View style="@style/call_talk_ctrl_divider" />

        <ImageView
            android:id="@+id/iv_flip"
            style="@style/call_talk_ctrl"
            android:src="@mipmap/ic_monitor_flip" />

        <View style="@style/call_talk_ctrl_divider" />

        <ImageView
            android:id="@+id/iv_close"
            style="@style/call_talk_ctrl"
            android:src="@mipmap/ic_monitor_close" />


    </LinearLayout>

</com.rl.geye.ui.widget.CtrlLayout>