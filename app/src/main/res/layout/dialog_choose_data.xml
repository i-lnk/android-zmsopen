<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:background="@drawable/bg_corner"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            style="@style/text_common"
            android:layout_width="match_parent"
            android:layout_margin="10dip"
            android:gravity="center"
            android:textColor="@color/text_blue"
            android:textSize="@dimen/text_18" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/text_blue" />

        <!--  -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dip">


            <RelativeLayout
                android:id="@+id/layout_data"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="40dip"
                android:paddingRight="40dip">

                <com.aigestudio.wheelpicker.WheelPicker
                    android:id="@+id/wheel_data"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    app:wheel_atmospheric="true"
                    app:wheel_curved="true"
                    app:wheel_cyclic="true"
                    app:wheel_item_space="@dimen/wheel_item_space"
                    app:wheel_item_text_color="#7f7f7f"
                    app:wheel_item_text_size="@dimen/wheel_text_size"
                    app:wheel_selected_item_text_color="@color/text_blue" />

                <TextView
                    android:id="@+id/tv_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/wheel_data"
                    android:text="åˆ†"
                    android:textColor="@color/text_blue"
                    android:textSize="20sp"
                    android:visibility="gone" />

                <RelativeLayout
                    android:layout_width="120dp"
                    android:layout_height="38dp"
                    android:layout_centerInParent="true"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <FrameLayout
                        android:layout_width="60dip"
                        android:layout_height="@dimen/divider_height"
                        android:layout_centerHorizontal="true"
                        android:background="@color/btn_blue" />

                    <FrameLayout
                        android:layout_width="60dip"
                        android:layout_height="@dimen/divider_height"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:background="@color/btn_blue" />

                </RelativeLayout>


            </RelativeLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:background="@color/divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="@dimen/input_view_height"
                android:layout_weight="1"
                android:background="@drawable/bg_corner_white_left_bottom"
                android:text="@string/str_cancel"
                android:textAllCaps="false"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_16" />

            <View
                android:layout_width="@dimen/divider_height"
                android:layout_height="match_parent"
                android:background="@color/divider" />

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="0dp"
                android:layout_height="@dimen/input_view_height"
                android:layout_weight="1"
                android:background="@drawable/bg_corner_white_right_bottom"
                android:text="@string/str_ok"
                android:textAllCaps="false"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_16" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>