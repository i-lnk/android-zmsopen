<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ly_menu"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true">

    <ImageView
        android:id="@+id/iv_menu_set"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginLeft="2dp"
        android:src="@mipmap/bt_b1_01" />


    <RelativeLayout
        android:id="@+id/ly_icons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_menu_set"
        android:layout_marginTop="8dp"
        android:background="@mipmap/a_bg"
        android:padding="2dp">

        <ImageView
            android:id="@+id/iv_menu_1"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/ic_menu_1_selector" />

        <ImageView
            android:id="@+id/iv_menu_2"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_below="@+id/iv_menu_1"
            android:layout_toRightOf="@+id/iv_menu_1"
            android:src="@drawable/ic_menu_2_selector"
            android:translationX="16dp"
            android:translationY="-16dp" />

        <ImageView
            android:id="@+id/iv_menu_3"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_below="@+id/iv_menu_2"
            android:layout_toRightOf="@+id/iv_menu_2"
            android:src="@drawable/ic_menu_3_selector"
            android:translationX="18dp"
            android:translationY="-13dp" />

        <ImageView
            android:id="@+id/iv_menu_4"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_below="@+id/iv_menu_3"
            android:layout_toRightOf="@+id/iv_menu_3"
            android:src="@drawable/ic_menu_4_selector" />

    </RelativeLayout>


</RelativeLayout>
