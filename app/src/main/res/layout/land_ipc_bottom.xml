<?xml version="1.0" encoding="utf-8"?><!-- 横屏时视频控制栏 -->
<com.rl.geye.ui.widget.CtrlLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ly_ipc_bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    app:moveDistance="60dp"
    app:move_direction="down">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:background="#76000000"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_menu"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_margin="10dp"
            android:src="@mipmap/bt_q_a1" />


        <ImageView
            android:id="@+id/iv_mode_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="5dip"
            android:src="@drawable/ic_monitor_mode_all_selector" />


    </RelativeLayout>

</com.rl.geye.ui.widget.CtrlLayout>